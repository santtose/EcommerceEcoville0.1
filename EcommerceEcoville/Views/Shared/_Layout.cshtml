<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    @* Barra de navegação *@
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">
            Ecommerce Ecoville
        </a>
        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Produto" asp-action="Index">Produto</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Categoria" asp-action="Index">Categoria</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Index">Usuario</a>
                </li>
            </ul>
        </div>
    </nav>
    @* Conteúdo *@
    <div class="m-5">
        @RenderBody()
    </div>
    @* Rodapé *@
    <hr />
    <footer>
        <p style="text-align:center; margin-top:auto">
            &copy; @DateTime.Now.Year - Desenvolvido por
            Diogo Eduardo
        </p>
    </footer>
</body>
</html>
