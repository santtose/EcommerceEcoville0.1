@model Usuario
<form asp-action="Alterar" method="post">
    <fieldset>
        <legend>Alterar Usuário</legend>
        @*<input type="hidden" asp-for="UsuarioId" />*@
        <div class="form-group">
            <input type="hidden" asp-for="UsuarioId" readonly="" class="form-control" />
        </div>
        <div class="form-group" id="Email">
            <label>Email:</label>
            <input type="text" asp-for="Email" class="form-control" />
        </div>
        <div class="form-group" id="Logradouro">
            <label>Rua:</label>
            <input type="text" asp-for="Endereco.Logradouro" class="form-control" />
        </div>
        <div class="form-group" id="Bairro">
            <label>Bairro:</label>
            <input type="text" asp-for="Endereco.Bairro" class="form-control" />
        </div>
        <div class="form-group" id="Localidade">
            <label>Cidade:</label>
            <input type="text" asp-for="Endereco.Localidade" class="form-control" />
        </div>
        <div class="form-group" id="Uf">
            <label>Estado:</label>
            <input type="text" asp-for="Endereco.Uf" class="form-control" />
        </div>
        <div class="form-group" id="Numero">
            <label>Número:</label>
            <input type="text" asp-for="Endereco.Numero" class="form-control" />
        </div>
        <input type="submit" class="btn btn-outline-success" value="Salvar" />
    </fieldset>
</form>
